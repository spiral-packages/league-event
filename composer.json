{
    "name": "spiral-packages/league-event",
    "description": "The League Event bridge for Spiral Framework",
    "keywords": [
        "spiral",
        "spiral-packages",
        "event-dispatcher"
    ],
    "homepage": "https://github.com/spiral-packages/symfony-event-dispatcher",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "spiral/events": "^3.0",
        "league/event": "^3.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5",
        "spiral/testing": "^2.0",
        "vimeo/psalm": "^4.22"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\League\\Event\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\League\\Event\\Tests\\App\\": "tests/app",
            "Spiral\\League\\Event\\Tests\\": "tests/src"
        },
        "files": [
            "tests/polyfill.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "extra": {
        "spiral": {
            "bootloaders": [
                "Spiral\\League\\Event\\Bootloader\\EventBootloader"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
